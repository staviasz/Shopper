{
  "name": "routnely-api-v2",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "docker:dev-build": "docker-compose -f docker/dev/docker-compose.yml up --build",
    "docker:dev": "docker-compose -f docker/dev/docker-compose.yml up",
    "docker:dev-kill": "docker-compose -f docker/dev/docker-compose.yml stop",
    "docker:pg-test-build": "npm run docker:pg-test-rm && docker-compose -f ./docker/test/docker-compose.postgres.yml up -d --build",
    "docker:pg-test-run": "docker-compose -f ./docker/test/docker-compose.postgres.yml up -d",
    "docker:pg-test-kill": "docker-compose -f ./docker/test/docker-compose.postgres.yml stop",
    "docker:pg-test-rm": "docker-compose -f docker/test/docker-compose.postgres.yml down --volumes",

    "build": "nest build",
    "start": "nest start",
    "start:dev": "npm run prisma:push && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/infra/api/main.js",
    
    "prisma:seed": "npx prisma db seed",
    "prisma:push": "npx prisma db push",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:testMigrate": "dotenv -e .env.test -- npx prisma migrate dev",
    "prisma:testPush": "dotenv -e .env.test -- npx prisma db push",
    
    "prepare": "husky install",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" ",
    
    "test": "dotenv -e .env.test -- jest -i",
    "test:ci": "dotenv -e .env.test -- jest -i --ci",
    "test:unit": "dotenv -e .env.test -- jest -i --config ./jest-unit-config.js",
    "test:integration": "dotenv -e .env.test -- jest -i --config ./jest-integration-config.js",
    "test:e2e": "dotenv -e .env.test -- jest -i --config ./jest-e2e-config.js",
    "test:watch": "dotenv -e .env.test -- jest -i --watch",
    "test:cov": "dotenv -e .env.test -- jest -i --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/throttler": "^5.2.0",
    "@prisma/client": "^5.16.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/jest": "^0.2.36",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "jest-runner-groups": "^2.2.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "schema": "./src/infra/database/prisma/schema/schema.prisma"
  },
  "_moduleAliases": {
    "@": "src"
  }
}
